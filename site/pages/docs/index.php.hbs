	$auth0 = new Auth0([
	  'domain' => $domain,
	  'client_id' => $client_id,
	  'client_secret' => $client_secret,
	  'redirect_uri' => $redirect_uri,
	  'audience' => $audience,
	  'scope' => 'openid profile',
	  'persist_id_token' => true,
	  'persist_access_token' => true,
	  'persist_refresh_token' => true,
	]);

	$userInfo = $auth0->getUser();
